@using RepoNikon.Factroy
@using RepoNikon.Models.BaseModels
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    @*Her laver vi en udtræk af en simple tekst*@
    @{
        Footer f = new Footer();
        FooterFac ff = new FooterFac();
        f = ff.Get(1);
    }
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>

    <link href="~/Css/foundation.min.css" rel="stylesheet" />
    <link href="~/Css/foundation.css" rel="stylesheet" />
    <link href="~/Css/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <header class="large-12 columns">

            <img src="~/Pic/header.PNG" />
        </header>
    </div>
    <div class="row">
        <div class="row">
            <div class="large-12 columns">
                <nav>
                    <ul class="menu">
                        <li><a href="#">Hjem</a></li>
                        <li><a href="#">Produkter</a></li>
                        <li><a href="#">Om Os</a></li>
                        <li><a href="#">Kontakt</a></li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>
    @RenderBody()
    <div class="row">
        <Footer class="large-12 columns">
            @*her ud skriver vi den simple tekst*@
            <p>@f.Text</p>

        </Footer>
    </div>

    <script src="~/Content/js/vendor/jquery.min.js"></script>
    <script src="~/Content/js/vendor/what-input.min.js"></script>
    <script src="~/Content/js/foundation.min.js"></script>
    <script src="~/Content/js/app.js"></script>
</body>
</html>

